@{
    ViewData["Title"] = "Login Page";
}

@model Muscat_Palace.Models.User

<div style="display: flex; justify-content: center; background-color: black; padding: 0px 0; border-top: 2px solid rgb(245, 176, 0); border-bottom: 2px solid rgb(245, 176, 0);">
    <div style="flex: 1; text-align: center; border-right: 1px solid rgb(245, 176, 0);">
        <a asp-controller="Home" asp-action="Index" style="color: rgb(245, 176, 0); text-decoration: none; font-size: 1.2rem; display: block; padding: 10px 0;">HOME</a>
    </div>
    <div style="flex: 1; text-align: center; border-right: 1px solid rgb(245, 176, 0);">
        <a asp-controller="Home" asp-action="Menu" style="color: rgb(245, 176, 0); text-decoration: none; font-size: 1.2rem; display: block; padding: 10px 0;">MENU</a>
    </div>
    <div style="flex: 1; text-align: center; border-right: 1px solid rgb(245, 176, 0);">
        <a asp-controller="Home" asp-action="AboutUs" style="color: rgb(245, 176, 0); text-decoration: none; font-size: 1.2rem; display: block; padding: 10px 0;">ABOUT US</a>
    </div>
    <div style="flex: 1; text-align: center;">
        <a asp-controller="Home" asp-action="ContactUs" style="color: rgb(245, 176, 0); text-decoration: none; font-size: 1.2rem; display: block; padding: 10px 0;">CONTACT US</a>
    </div>
</div>

<div style="width: 100%; overflow: hidden; height: 320px; position: relative;">
    <img src="~/images/360_F_252388016_KjPnB9vglSCuUJAumCDNbmMzGdzPAucK.jpg" alt="Food Image" style="width: 100%; height: 100%; object-fit: cover; display: block;">
</div>

<div style="align-items: center;">
    <h1 style="text-align: center; margin: 0; color: rgb(245, 176, 0); font-style: italic;">SIGN UP</h1>
    <p style="text-align: center; margin: 5px 0 20px 0; color: rgb(245, 176, 0);">SIGN UP TO CONTINUE</p>
    
    <div style="display: flex; justify-content: center; align-items: center;">
    <form style="font-family: Arial, sans-serif; text-align: center;" asp-action="Login" asp-controller="Home" method="post">

        <div style="margin-bottom: 15px;">
            <label style="color: rgb(245, 176, 0);">EMAIL:</label>
            <input type="email" asp-for="Email"
                   style="border: none;
                          border-bottom: 1px solid rgb(245, 176, 0);
                          width: 200px;
                          margin-left: 5px;
                          padding: 2px 0;
                          background: transparent;
                          outline: none;
                          color: white;">
        </div>

        <div style="margin-bottom: 20px;">
            <label style="color: rgb(245, 176, 0);">PASSWORD:</label>
            <input type="password" asp-for="Password"
                   style="border: none;
                          border-bottom: 1px solid rgb(245, 176, 0);
                          width: 200px;
                          margin-left: 5px;
                          padding: 2px 0;
                          background: transparent;
                          outline: none;
                          color: white;">
        </div>
        
        <button style="font-style: italic; 
                       font-weight: bold; 
                       padding: 10px 20px; 
                       font-size: 1rem; 
                       background-color: rgb(245, 176, 0); 
                       border: 1px solid rgb(245, 176, 0); 
                       color: rgb(0, 0, 0); 
                       border-radius: 30px; 
                       cursor: pointer; 
                       transition: background 0.3s, color 0.3s;" 
                type="submit">
            SIGN IN
        </button>
    </form>
</div>

<div/>


<style>
    body {
            background-color: black;
            color: white;
            margin: 0;
            font-family: Arial, sans-serif;
        }
</style>